{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"target": "es5",
		"strict": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"lib": ["es5", "es6", "dom", "es2017"],
		"paths": {
			"*": [
				"node_modules/*",
				"src/_vendor/*"
			]
		}
	},
	"include": [
		"src/**/*",
		"tests/**/*"
	]
}
